<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <EditText
        android:id="@+id/edt_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên quán"/>

    <EditText
        android:id="@+id/edt_store_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ"
        />
    <EditText
        android:id="@+id/edt_store_shipCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phí giao hàng"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hình đại diện" />

    <ImageView
        android:id="@+id/img_store"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:src="@drawable/upload_placeholder"
        android:scaleType="centerCrop"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/second_color"
        android:text="Thêm"
        android:textColor="#fff"
        android:onClick="uploadData"/>
    <Button
        android:id="@+id/btn_all_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/second_color"
        android:text="Xem danh sách quán"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:onClick="viewAllStore"/>


</LinearLayout>